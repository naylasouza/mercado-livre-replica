generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./banco.sqlite"
}

model Produto {
  id Int @id @default(autoincrement())
  titulo String
  preco Float
  precoDesconto Float
  precoParcelado Float
  caracteristicas String
  imagens String
  estoque Int
  freteGratis Boolean @default(false)
  full Boolean @default(false)
}

model Pedido {
  id Int @id @default(autoincrement())
  valorTotal Float
  itensVenda String
}